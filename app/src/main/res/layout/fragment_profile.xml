<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        style="@style/list_item"
        android:layout_marginTop="@dimen/spacing_small">

        <android.support.v7.widget.AppCompatImageView
            style="@style/icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:src="@drawable/ic_phone_24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:fontFamily="@string/ff_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/fragment.profile.phone.number"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large"
                tools:ignore="RtlCompat,UnusedAtribute"/>

            <TextView
                android:id="@+id/txt_phone_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@string/ff_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/fragment.profile.phone.label.mobile"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_normal"
                tools:ignore="RtlCompat,UnusedAtribute"/>

            <!--Обертка для редактирования полей-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_phone_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/ff_regular"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/ff_regular"
                    android:hint="@string/fragment.profile.phone.label.mobile"
                    android:enabled="true"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/devider"/>

    <RelativeLayout
        style="@style/list_item"
        android:layout_marginTop="@dimen/spacing_small">

        <android.support.v7.widget.AppCompatImageView
            style="@style/icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:src="@drawable/ic_mail_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_email_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:fontFamily="@string/ff_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/fragment.profile.email.name"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large"
                tools:ignore="RtlCompat,UnusedAtribute" />

            <TextView
                android:id="@+id/txt_email_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@string/ff_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/fragment.profile.phone.label.email"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_normal"
                tools:ignore="RtlCompat,UnusedAtribute" />

            <!--Обертка для редактирования полей-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_email_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/et_email_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fragment.profile.phone.label.email"
                    android:enabled="true"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/devider"/>

    <RelativeLayout
        style="@style/list_item"
        android:layout_marginTop="@dimen/spacing_small">

        <android.support.v7.widget.AppCompatImageView
            style="@style/icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:src="@drawable/ic_forum_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_vk_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:fontFamily="@string/ff_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/fragment.profile.vk.url"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large"
                tools:ignore="RtlCompat,UnusedAtribute" />

            <TextView
                android:id="@+id/txt_vk_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@string/ff_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/fragment.profile.phone.label.vk"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_normal"
                tools:ignore="RtlCompat,UnusedAtribute" />

            <!--Обертка для редактирования полей-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_vk_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/et_vk_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fragment.profile.phone.label.vk"
                    android:enabled="true"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/devider"/>

    <RelativeLayout
        style="@style/list_item"
        android:layout_marginTop="@dimen/spacing_small">

        <android.support.v7.widget.AppCompatImageView
            style="@style/icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:src="@drawable/ic_merge_type_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_github_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:fontFamily="@string/ff_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/fragment.profile.github.url"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large"
                tools:ignore="RtlCompat,UnusedAtribute" />

            <TextView
                android:id="@+id/txt_github_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@string/ff_regular"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/fragment.profile.phone.label.github"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_normal"
                tools:ignore="RtlCompat,UnusedAtribute" />

            <!--Обертка для редактирования полей-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_github_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/et_github_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fragment.profile.phone.label.github"
                    android:enabled="true"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>